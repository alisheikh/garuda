<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                <![CDATA[%date{yyyy-MM-dd HH:mm:ss.SSS} | %-5level | %53X{channel} [%-20.20thread] [%-20.20logger{10}] %msg%n]]></pattern>
        </encoder>
    </appender>

    <root level="trace">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
